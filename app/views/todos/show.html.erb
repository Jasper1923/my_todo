<p id="notice"><%= notice %></p>

<p>
  <strong>Tittle:</strong>
  <% if @todo.is_finished? %>
    <del> <%= @todo.tittle %></del>
  <% else %>
     <%= @todo.tittle %>
  <% end %>
</p>

<p>
  <strong>Remark:</strong>
  <%= @todo.remark %>
</p>

<p>
  <strong>Is finished:</strong>
  <%= @todo.is_finished %>
</p>

<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>
